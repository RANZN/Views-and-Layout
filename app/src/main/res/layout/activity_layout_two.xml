<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F2F2F"
    android:theme="@style/CardView.Light"
    tools:context=".Layout_two">

    <TextView
        android:id="@+id/tvHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="20dp"
        android:text="Hello AND3"
        android:textColor="@color/white"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHello"
        android:layout_centerHorizontal="true"
        android:text="Welcome to Layouts"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <View
        android:id="@+id/blue_circle"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@id/tvWelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/blue_circle" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/blue_circle"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:drawableEnd="@drawable/ic_name"
        android:drawablePadding="15dp"
        android:gravity="center"
        android:text="Name: Prakash Ranjan"
        android:textColor="#FF0000"
        android:textSize="25dp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/tvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvName"
        android:layout_marginLeft="10dp"
        android:text="Age: 22"
        android:textColor="#FF0000"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#00FF00"
        android:text="NEXT"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvThree"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_above="@+id/btnNext"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="20dp"
        android:background="#C4C4C4"

        />

    <TextView
        android:id="@+id/tvTwo"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:layout_above="@+id/tvThree"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:background="#C4C4C4" />

    <TextView
        android:id="@+id/tvOne"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_above="@+id/tvTwo"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="#C4C4C4" />


</RelativeLayout>